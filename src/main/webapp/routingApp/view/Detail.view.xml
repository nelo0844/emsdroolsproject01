<View xmlns="sap.m" xmlns:layout="sap.ui.layout" controllerName="sap.gm.controller.Detail"
	xmlns:core="sap.ui.core">
		<Page title="{globalModel>ruleName}" navButtonPress="onNavBack"
			showNavButton="{device>/system/phone}">
			<headerContent>
				<CheckBox text="Enable" enabled="false" selected="globalModel>isEnable"/>
			</headerContent>
			<content>
				<Panel width="auto" height="50%" accessibleRole="Region">
					<headerToolbar>
						<Toolbar height="3rem">
							<Title text="When" />
						</Toolbar>
					</headerToolbar>
					<content>
						<Label text="{/whenDrl}" />
					</content>
				</Panel>
				<Panel width="auto" height="50%">
					<headerToolbar>
						<Toolbar height="3rem">
							<Title text="Then" />
						</Toolbar>
					</headerToolbar>
					<content>
						<Label text="{/thenDrl}" />
					</content>
				</Panel>
			</content>
			<footer>
				<Toolbar>
					<Button text="Edit" type="Accept" press="onEditRuleEvent" />
					<Button text="Remove" type="Accept" press="onRemoveRuleEvent" />
				</Toolbar>
			</footer>
		</Page>
</View>