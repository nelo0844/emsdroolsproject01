<View xmlns="sap.m" xmlns:layout="sap.ui.layout" controllerName="sap.gm.controller.Detail"
	xmlns:core="sap.ui.core">
		<Page title="{globalModel>orderName}" navButtonPress="onNavBack"
			showNavButton="{device>/system/phone}">
			<content>
				<Panel width="auto" height="50%" accessibleRole="Region">
					<headerToolbar>
						<Toolbar height="3rem">
							<Title text="When" />
						</Toolbar>
					</headerToolbar>
					<content>
						<List items="{/}">
							<items>
								<CustomListItem>
									<VBox class="sapUiSmallMargin">
										<Label text="{productName}" />
										<List items="{properties}">
											<items>
												<CustomListItem>
													<Label text="{productName}" />
												</CustomListItem>
											</items>
										</List>
									</VBox>
								</CustomListItem>
							</items>
						</List>
					</content>
				</Panel>
				<Panel width="auto" height="50%">
					<headerToolbar>
						<Toolbar height="3rem">
							<Title text="Then" />
						</Toolbar>
					</headerToolbar>
					<content>
					</content>
				</Panel>
			</content>
			<footer>
				<Toolbar>
					<Button text="Edit" type="Accept" press="onEditRuleEvent" />
					<Button text="Remove" type="Accept" press="onRemoveRuleEvent" />
				</Toolbar>
			</footer>
		</Page>
</View>