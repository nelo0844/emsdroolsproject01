<View xmlns="sap.m" xmlns:layout="sap.ui.layout" controllerName="sap.gm.controller.Master">
	<Page>
		<headerContent>
			<Toolbar>
				<Button text="Add" type="Accept" press="onAddRuleEvent" />
				<Button text="Apply" type="Accept" press="onApplyRuleEvent"/>
			</Toolbar>
		</headerContent>
		<subHeader>
			<Toolbar>
				<SearchField liveChange="onSearch" width="100%" />
			</Toolbar>
		</subHeader>
		<content>
			<List id="ruleList" items="{globalModel>/rules}" mode="SingleSelectMaster">
				<items>
					<CustomListItem>
						<HBox justifyContent="SpaceBetween">
							<Link text="{globalModel>ruleName}" press="onSelectionChange"  class="sapUiSmallMargin"/>
							<Label text="{=${globalModel>enabled}?'Enable':'Disable'}" class="sapUiSmallMargin"/>
						</HBox>
					</CustomListItem>
				</items>
			</List>
		</content>
	</Page>
</View>